package com.swing;

import java.awt.geom.Point2D;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JRadioButton;
import javax.swing.JTextField;

public class Registration {
	JFrame f;
	JLabel l1, l2, l3, l4;
	JTextField t1, t2, t3, t4;
	JButton b1, b2, b3, b4, b5;
	JRadioButton r1, r2;

	public Registration() {
		f = new JFrame("REGISTRATION FORM");
		f.setVisible(true);
		f.setSize(800, 500);
		f.setLayout(null);
		f.setResizable(false);

		l1 = new JLabel("ID");
		l2 = new JLabel("NAME");

		r1 = new JRadioButton("MALE");
		r1 = new JRadioButton("FEMALE");

		l3 = new JLabel("ADDRESS");
		l4 = new JLabel("CONTACT");

		t1 = new JTextField(20);
		t2 = new JTextField(20);
		t3 = new JTextField(20);
		t4 = new JTextField(20);

		b1 = new JButton("Exit");
		b2 = new JButton("REGISTER");
		b3 = new JButton("DELETE");
		b4 = new JButton("UPDATE");
		b5 = new JButton("RESET");

		f.add(l1);
		f.add(l2);
		

		l1.setBounds(50, 100, 50, 20);
		l2.setBounds(50, 150, 50, 20);

		r1.setBounds(50, 200, 50, 20);
		r2.setBounds(50, 250, 50, 20);

		l3.setBounds(50, 300, 50, 20);
		l4.setBounds(50, 350, 50, 20);

		t1.setBounds(150, 100, 50, 20);
		t2.setBounds(150, 150, 50, 20);
		t3.setBounds(150, 300, 50, 20);
		t4.setBounds(150, 350, 50, 20);

		b1.setBounds(50, 400, 100, 20);
		b2.setBounds(150, 450, 100, 20);
		b3.setBounds(50, 400, 100, 20);
		b4.setBounds(150, 450, 100, 20);
		b5.setBounds(100, 500, 100, 20);
	}

	public static void main(String[] args) {
		new Registration();
	}
}
